# Environment Configuration
NODE_ENV=development

# Server Configuration
REST_API_PORT=3001
REST_API_HOST=0.0.0.0
REALTIME_PORT=3002
REALTIME_HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:4173

# Database Configuration
DATABASE_URL=postgresql://speedlink_user:speedlink_password@localhost:5432/speedlink_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=speedlink_db
DB_USER=speedlink_user
DB_PASSWORD=speedlink_password
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=speedlink:

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Logging
LOG_LEVEL=debug
LOG_PRETTY_PRINT=true

# Party Configuration
MAX_PARTY_SIZE=20
PARTY_EXPIRY_HOURS=24
PARTY_CODE_LENGTH=6

# Location Update Configuration
LOCATION_BROADCAST_THROTTLE_MS=1000
MAX_LOCATION_HISTORY=100

# Security
BCRYPT_ROUNDS=12
